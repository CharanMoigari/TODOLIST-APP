<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="/css/home.css" type="text/css">
<title><%=title%></title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body style="background-color:rgb(36, 90, 139);">
    <div class="todo-list">
        <div id="heading">
            <!-- For center heading -->
            <h1>TODO APP</h1>
        </div>
        <form action="/create-todolist " method="post">
            <div id="task-info" class="d-flex flex-column w-100">
            <div  id="discription">
 <h2>DESCRIPTION</h2>
             <!-- For description of task -->
  <input type="text" name="discription" class="form-control form-control-lg" placeholder="What you need to do?">
            </div>
        <div class="d-flex flex-row justify-content-around w-80 my-4">
            <div id="category">
                <div><h2>CATEGORY</h2></div>
                <!-- category options -->
            <select name="category" class="form-control form-control-lg">
              <option value="personal">Personal</option>
              <option value="work">Work</option>
              <option value="college">College</option>
              <option value="birthday">Birthday</option>
              <option value="other">Other</option>
            </select></div>

            <div id="duedate">
                <h2>DUEDATE</h2>
                <!-- date for the task to be completed -->
                 <input type="date" name="duedate"  class="form-control form-control-lg">
                           </div>
                        </div>
                </div>
                <button type="submit"class="btn btn-success btn-lg">
                    <i class="fa fa-plus" style="font-size:36px"></i>
                    ADD TASK
                </button>
        </form>
<br>
    <div id="heading2">
        <h2>TASK LISTS</h2>
    </div>
    <div id="tasklist">
    <form action="/delete-task" method="get" id="deletetask">

        <!-- Forming a table for added task -->
        <table class="table">
            <thead>
                <tr>
                  <th>Select</th>
                  <th>Task</th>
                  <th>Category</th>
                <th>Due Date</th>
                </tr>
              </thead>
            <% for(let i of todolist) { %>
                <!-- headings of the added tasks including checkboxes task category and date -->
<tr>
                   <td> <input class="form form-control form-control-sm"type="checkbox" name="<%= i._id %>" ></td>
                   <td> <p id="task-description"><%= i.discription %></p></td>
                    <td><p id="task-category"> <%= i.category %></p></td>
                    <td><p id="due-date">: <%= i.duedate %></p></td>
</tr>
            <% } %>
             
    

               
</table>
</div>
<button id="delete"type="submit" class="btn btn-danger btn-lg">
        <i class="fa fa-trash-o" style="font-size:36px ;color:black"></i>
       DELETE TASK
    </button>

    </form>

    </div>
    <script type="text/javascript" src="../assets/js/home.js"></script>
</body>

</html>